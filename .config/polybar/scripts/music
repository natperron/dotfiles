#!/bin/sh
playerctl -p youtubemusic,spotify metadata -f {{playerName}} 2>/dev/null | grep -v mopidy >/dev/null && echo %{A1:playerctl -p youtubemusic,spotify previous:}玲%{A} %{A1:playerctl -p youtubemusic,spotify play-pause:}$(playerctl -p youtubemusic,spotify status 2>/dev/null | grep Playing >/dev/null && echo '' || echo '契')%{A} %{A1:playerctl -p youtubemusic,spotify next:}怜%{A} "%{T1}  | %{T-} %{T4}%{T-}";
echo "%{T4}%{T-}" ;